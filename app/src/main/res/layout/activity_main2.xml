<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="411dp"
            android:layout_height="200dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="73dp"
            app:srcCompat="@drawable/iphone14promax" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/textView7"
                style="@style/TextAppearance.Material3.BodyLarge"
                android:layout_width="396dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="45dp"
                android:layout_marginBottom="367dp"
                android:text="Điện thoại iPhone 14 Pro Max 256GB "
                android:textColor="@color/black"
                android:textSize="27dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="61dp"
                android:layout_height="63dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="218dp"
                android:layout_marginBottom="242dp"
                app:srcCompat="@drawable/giohang" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="59dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="284dp"
                android:layout_marginBottom="245dp"
                app:srcCompat="@drawable/share" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="211dp"
                android:layout_height="44dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="9dp"
                android:layout_marginEnd="191dp"
                android:layout_marginBottom="311dp"
                app:srcCompat="@drawable/loatiphone" />

            <TextView
                android:id="@+id/tx1"
                android:layout_width="156dp"
                android:layout_height="51dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="224dp"
                android:layout_marginBottom="308dp"
                android:fontFamily="sans-serif-black"
                android:text="31,490,000"
                android:textColor="@android:color/holo_red_light"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/banner" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="193dp"
                android:layout_marginBottom="247dp"
                android:backgroundTint="#F44336"
                android:text="Mua Ngay" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="161dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="6dp"
                android:layout_marginTop="473dp"
                android:layout_marginBottom="66dp"
                app:srcCompat="@drawable/cauhinh" />


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/relativeLayout2">

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/duoicung" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>